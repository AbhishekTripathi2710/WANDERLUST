<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br/><br/>
    <h3>Create a new listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation">
        <div class="mb-2">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add a Catchy Title" type="text" class="form-control" required/>
            <div class="valid-feedback">Title Looks Good!</div>
        </div>
        <div class="mb-2">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter valid Description</div>
        </div>
        <div class="mb-2">
            <label for="image" class="form-label" class="form-label">Image Link</label>
            <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control">
        </div>
        <div class="row">
            <div class="mb-2 col-md-4" >
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="1200"  class="form-control" required>
                <div class="invalid-feedback">Please enter a valid Price</div>
            </div>
            <div class="mb-2 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                <div class="invalid-feedback">Please enter a valid country</div>
            </div>
        </div>
       
        <div class="mb-2">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Ashta, Bhopal" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter a valid Location</div>
        </div>
        <br /><br />
        <button class="btn btn-dark add-btn">Add</button>
        <br/>
        <br/>
    </form>
    </div>
</div>